@{
    ViewData["Title"] = "Turmas";
}

@model List<Class>

<div class="col-xs-12">
        <h4>Ingressar em uma turma</h4>
        <div class="col-xs-">
            <input type="text" class="col-xs-8" placeholder="Digite o cÃ³digo da Turma:">
        </div>
        <div class="col-xs-2">
            <button class="btn btn-primary">Entrar na Turma</button>
        </div>
        <div class="col-xs-2">
            <a class="btn btn-primary" href="/Class/Create">Criar nova Turma</a>
        </div>
    </div>
    <div class="col-xs-12">
        <br>    
        <h4>Minhas Turmas</h4>
        <table class="table table-bordered">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td colspan="3">
                            <span class="form-control">
                                @item.NamClass
                            </span>
                        </td>
                        <td>
                            <a id="@item.NidClass" class="btn btn-default">Acessar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>