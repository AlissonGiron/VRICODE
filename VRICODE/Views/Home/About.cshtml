            <div class="row">
                <img src="/images/logo-facens.png">
            </div>            

            <br>
            <br>
            <div class="row">
                <label>
                    <span class="glyphicon glyphicon-user" style="color: steelblue; text-align: center;"></span> 
                    Usuário
                </label>
                <input class="form-control" type="text" value=""/>
            </div>
            <br>
            <div class="row">
                <label>
                    <span class="glyphicon glyphicon-file" style="color: steelblue; text-align: center;"></span> 
                    Senha
                </label>
                <input class="form-control" type="password" value=""/>
            </div>
            <br>
            <br>
            <div class="row">
                <button class="btn btn-primary">
                    <span class="glyphicon glyphicon-log-in" style="text-align: center;"></span> 
                     Entrar
                </button>
                <button class="btn btn-primary">
                    <span class="glyphicon glyphicon-list-alt" style="text-align: center;"></span> 
                     Cadastro
                </button>
            </div>
        </div>
    </form>

    <div id="footer-info">
        <p>TECNOLOGIAS WEB - LAB</p>
        <p>Alisson Giron - 163011</p>
        <p>Gabriel Belchior - 160060</p>
    </div>
</div>


<script>
    var bubbles_list = []

    function bubble(x, y, width, height, color)
    {
        this.x = x + "px";
        this.y = y + "px";
        this.width = width + "px";
        this.height = height + "px";
        this.color = color;
    }

    function getBubbleStyle(bubble)
    {
        return ["left:", bubble.x, "; bottom:", bubble.y, "; width:", bubble.width, "; height:", bubble.height, "; background-color:", bubble.color].join(" ");
    }

    function getColor(index) 
    {
        return index % 2 == 0 ? "darkslategray" : "grey";
    }

    $(document).ready(function() {

        for(var i = 0; i < 10; i++)
        {
            bubbles_list.push(new bubble(-100 + (i*200), -100 + ( (i%2) * 100 ), 200, 200, getColor(i)))
        }

        console.log(bubbles_list)

        bubbles_list.forEach(function(bubble) {
            $("body").append("<div class='ball' style='"+ getBubbleStyle(bubble) +"'></div>");
        })

    })


</script>